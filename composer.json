{
    "name": "vblinden/filament-gravatar-provider",
    "description": "Use Gravatars with Filament",
    "keywords": [
        "vblinden",
        "filament-gravatar-provider"
    ],
    "homepage": "https://github.com/vblinden/filament-gravatar-provider",
    "license": "MIT",
    "authors": [
        {
            "name": "vblinden",
            "email": "hello@vblinden.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Vblinden\\FilamentGravatarProvider\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vblinden\\FilamentGravatarProvider\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
